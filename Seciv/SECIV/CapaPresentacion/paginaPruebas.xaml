<Page
    x:Class="CapaPresentacion.paginaPruebas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapaPresentacion"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="paginaPruebas"
    Height="938"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="0,0,0,-504">

        <!--  COMPRAS  -->
        <Grid
            Width="600"
            Margin="0,30,0,20"
            Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="333*"/>
                <RowDefinition Height="67*"/>
            </Grid.RowDefinitions>
            <Button
                Margin="-2,2,0,299"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                CommandParameter="{x:Static Dock.Right}"
                RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="179.147" />
                        <TranslateTransform />
                    </TransformGroup>
                </Button.RenderTransform>
                <materialDesign:PackIcon Kind="ArrowLeft" />
            </Button>

            <Button
                x:Name="btnAgregar"
                Grid.Row="1"
                Width="316"
                Height="30"
                Margin="217,8,0,29"
                HorizontalAlignment="Left"
                Content="Agregar" />

            <Button
                x:Name="btnEditar"
                Grid.Row="0"
                Width="90"
                Height="30"
                Margin="443,295,0,8"
                HorizontalAlignment="Left"
                Content="Editar" />

            <Button
                x:Name="BtnEliminar"
                Grid.Row="0"
                Width="90"
                Height="30"
                Margin="217,295,0,8"
                HorizontalAlignment="Left"
                Content="Eliminar" />
            <Button
                x:Name="btnLimpiar"
                Width="90"
                Height="30"
                Margin="330,295,180,8"
                Content="Limpiar" />

            <TextBox
                Margin="36,24,399,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Código"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                Margin="36,61,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Monto"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <DatePicker
                Margin="36,103,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Fecha"
                materialDesign:TextFieldAssist.HasClearButton="True"
                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

            <TextBox
                Margin="36,153,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Descuento"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                Margin="36,201,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Impuesto"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                Height="37"
                Margin="36,248,405,48"
                materialDesign:HintAssist.Hint="Subtotal"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                Margin="36,300,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Total"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.RowSpan="2" />
            <TextBox
                Margin="36,10,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Cliente"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.Row="1" />


            <TextBox
                Height="100"
                Margin="227,150,63,83"
                materialDesign:HintAssist.Hint="Descripcion de productos"
                materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox}"
                MaxLength="200"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <TextBox
                Margin="227,24,63,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Detalle"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <ComboBox
                Margin="227,61,63,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Metodo de pago"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem Content="Efectivo" />
                <ComboBoxItem Content="Sinpe" />
                <ComboBoxItem Content="Transferencia" />
                <ComboBoxItem Content="Cheke" />
            </ComboBox>

        </Grid>


        <!--  Ventas  -->
        <Grid
            Width="600"
            Margin="0,30,0,20"
            Background="White">
            <Button
                Margin="-2,2,0,366"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                CommandParameter="{x:Static Dock.Right}"
                RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="179.147" />
                        <TranslateTransform />
                    </TransformGroup>
                </Button.RenderTransform>
                <materialDesign:PackIcon Kind="ArrowLeft" />
            </Button>

            <Button
                Grid.Row="0"
                Width="316"
                Height="30"
                Margin="217,341,0,29"
                HorizontalAlignment="Left"
                Content="Agregar" />

            <Button
                Grid.Row="0"
                Width="90"
                Height="30"
                Margin="443,295,0,75"
                HorizontalAlignment="Left"
                Content="Editar" />

            <Button
                Grid.Row="0"
                Width="90"
                Height="30"
                Margin="217,295,0,75"
                HorizontalAlignment="Left"
                Content="Eliminar" />
            <Button
                Width="90"
                Height="30"
                Margin="330,295,180,75"
                Content="Limpiar" />

            <TextBox
                Margin="36,24,399,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Código"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                Margin="36,61,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Monto"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <DatePicker
                Margin="36,103,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Fecha"
                materialDesign:TextFieldAssist.HasClearButton="True"
                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

            <TextBox
                Margin="36,153,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Descuento"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                Margin="36,201,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Impuesto"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                Height="37"
                Margin="36,248,405,115"
                materialDesign:HintAssist.Hint="Subtotal"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                Margin="36,300,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Total"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                Margin="36,343,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Proveedor"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />


            <TextBox
                Height="100"
                Margin="227,150,63,150"
                materialDesign:HintAssist.Hint="Descripcion de productos"
                materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox}"
                MaxLength="200"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <TextBox
                Margin="227,42,63,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Detalle"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <ComboBox
                Margin="227,98,63,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Metodo de pago"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem Content="Efectivo" />
                <ComboBoxItem Content="Sinpe" />
                <ComboBoxItem Content="Transferencia" />
                <ComboBoxItem Content="Cheke" />
            </ComboBox>

        </Grid>
    </StackPanel>


</Page>
