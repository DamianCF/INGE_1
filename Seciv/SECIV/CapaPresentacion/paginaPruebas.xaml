<Page
    x:Class="CapaPresentacion.paginaPruebas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapaPresentacion"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="paginaPruebas"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Width="600" Margin="0,30,0,20" Background="White">
        <Button
            Margin="232,323,0,45"
            HorizontalAlignment="Left"
            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
            CommandParameter="{x:Static Dock.Right}"
            Content="CLOSE THIS"
            Style="{StaticResource MaterialDesignFlatButton}" />

        <Button
            x:Name="btnAgregar"
            Grid.Row="0"
            Width="90"
            Height="30"
            HorizontalAlignment="Left"
            Content="Agregar" Margin="373,280,0,90" />

        <Button
            x:Name="btnActualizar"
            Grid.Row="0"
            Width="90"
            Height="30"
            HorizontalAlignment="Left"
            Content="Actualizar" Margin="492,280,0,90" />

        <Button
            x:Name="BtnEliminar"
            Grid.Row="0"
            Width="90"
            Height="30"
            HorizontalAlignment="Left"
            Content="Eliminar" Margin="492,347,0,23" />
        <Button
            x:Name="btnLimpiar"
            Width="90"
            Height="30"
            Content="Limpiar" Margin="373,345,137,25" />

        <TextBox
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="37" Margin="16,228,421,135" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="211,24,66,0" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="16,19,415,0" RenderTransformOrigin="0.5,0.5" >
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.203"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.33"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="16,56,421,0" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="224,91,66,0" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="224,200,147,0" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="224,142,163,0" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="16,256,421,0" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="16,347,421,0" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="16,298,421,0" />

        <TextBox
            VerticalAlignment="Center"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="16,0,421,0" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="16,98,421,0" />

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint="Floating Hint"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="16,140,421,0" />

    </Grid>
</Page>
