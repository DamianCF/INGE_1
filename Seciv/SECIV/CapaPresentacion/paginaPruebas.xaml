<Page
    x:Class="CapaPresentacion.paginaPruebas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapaPresentacion"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="paginaPruebas"
    Height="938"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="-1,17,1,-1501">




        <!--  Ventas  -->
        <Grid
            Width="600"
            Height="450"
            Margin="0,30,0,20"
            Background="White">
            <Label
                Width="166"
                Height="32"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Facturas de compras"
                FontSize="16"
                FontWeight="Bold" />
            <Button
                Width="76"
                Height="60"
                Margin="10,2,0,388"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                CommandParameter="{x:Static Dock.Right}">

                <materialDesign:PackIcon
                    Width="72"
                    Height="47"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="ArrowRight" />
            </Button>

            <Button
                Width="26"
                Height="27"
                Margin="550,10,0,0"
                Padding="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Background="#00000000"
                BorderBrush="#00000000">
                <materialDesign:PackIcon
                    Width="32"
                    Height="28"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="HelpCircle" />
            </Button>

            <Button
                x:Name="btnAgregar"
                Grid.Row="0"
                Width="316"
                Height="30"
                Margin="237,388,0,32"
                HorizontalAlignment="Left"
                Content="Agregar"
                Foreground="White" />

            <Button
                x:Name="btnAplicar"
                Grid.Row="0"
                Width="90"
                Height="30"
                Margin="463,342,0,78"
                HorizontalAlignment="Left"
                Content="Aplicar"
                Foreground="White" />

            <Button
                x:Name="BtnEliminar"
                Grid.Row="0"
                Width="90"
                Height="30"
                Margin="237,342,0,78"
                HorizontalAlignment="Left"
                Content="Eliminar"
                Foreground="White" />
            <Button
                x:Name="btnLimpiar"
                Width="90"
                Height="30"
                Margin="350,342,160,78"
                Content="Limpiar"
                Foreground="White" />

            <!--  No visibles  -->
            <TextBox
                x:Name="txtId"
                Margin="425,10,10,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Id"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Visibility="Hidden" />
            <TextBox
                x:Name="txtEstado"
                Margin="227,10,208,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Estado"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Visibility="Hidden" />
            <!--  No visibles  -->




            <TextBox
                x:Name="txtCodigo"
                Margin="37,86,398,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Codigo"
                IsReadOnly="True"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                x:Name="txtMonto"
                Margin="37,0,398,0"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="Monto"
                materialDesign:TextFieldAssist.SuffixText="colones"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <ToggleButton
                Width="25"
                Height="25"
                Margin="177,260,398,165"
                materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=CloseCircle}"
                Content="{materialDesign:PackIcon Kind=Pencil}"
                Style="{StaticResource MaterialDesignActionToggleButton}"
                ToolTip="MaterialDesignActionLightToggleButton" />

            <DatePicker
                x:Name="txtFecha"
                Margin="37,128,398,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Fecha"
                materialDesign:TextFieldAssist.HasClearButton="True"
                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
            <Rectangle Margin="59,192,424,257" Fill="#FF2196F3" />
            <TextBox
                x:Name="txtImpuesto"
                Margin="37,248,449,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Impuesto"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                x:Name="txtSubtotal"
                Margin="37,297,398,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Subtotal"
                materialDesign:TextFieldAssist.SuffixText="colones"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                x:Name="txtTotal"
                Margin="37,348,398,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Total"
                materialDesign:TextFieldAssist.SuffixText="colones"
                IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

            <TextBox
                x:Name="txtProve"
                Margin="255,62,47,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Proveedor"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

            <TextBox
                x:Name="txtProducto"
                Margin="237,225,42,136"
                materialDesign:HintAssist.Hint="Descripcion de productos"
                materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox}"
                MaxLength="200"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <TextBox
                x:Name="txtDetalle"
                Margin="255,104,47,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Detalle"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <ComboBox
                x:Name="txtMetodoPago"
                Margin="255,146,44,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Metodo de pago"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem Content="Efectivo" />
                <ComboBoxItem Content="Sinpe" />
                <ComboBoxItem Content="Transferencia" />
                <ComboBoxItem Content="Cheque" />
            </ComboBox>
        </Grid>


        <!--  Ventas  -->
        <Grid
            Width="600"
            Margin="0,30,0,20"
            Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="333*" />
                <RowDefinition Height="67*" />
            </Grid.RowDefinitions>
            <Label
                Width="166"
                Height="32"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Genera venta"
                FontSize="16"
                FontWeight="Bold" />
            <Button
                Width="76"
                Height="60"
                Margin="10,2,0,388"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                CommandParameter="{x:Static Dock.Right}">

                <materialDesign:PackIcon
                    Width="72"
                    Height="47"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="ArrowRight" />
            </Button>


            <Button
                x:Name="BtnEliminarx"
                Grid.Row="0"
                Grid.RowSpan="2"
                Width="90"
                Height="30"
                Margin="247,313,0,57"
                HorizontalAlignment="Left"
                Content="Eliminar"
                Foreground="White" />
            <Button
                x:Name="btnLimpiarx"
                Grid.RowSpan="2"
                Height="30"
                Margin="359,313,153,57"
                Content="Limpiar"
                Foreground="White" />
            <Button
                x:Name="btnEditarx"
                Grid.Row="0"
                Grid.RowSpan="2"
                Width="88"
                Height="30"
                Margin="469,313,0,57"
                HorizontalAlignment="Left"
                Content="Editar"
                Foreground="White" />
            <Button
                x:Name="btnAgregarx"
                Width="310"
                Height="30"
                Margin="247,386,0,34"
                HorizontalAlignment="Left"
                Content="Agregar"
                Foreground="White" />

            <!--  No visibles  -->
            <TextBox
                x:Name="txtIdx"
                Margin="36,24,399,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Id"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Visibility="Hidden" />
            <TextBox
                x:Name="txtEstadox"
                Margin="36,24,399,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Estado"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Visibility="Hidden" />
            <!--  **********************************  -->
            <DatePicker
                x:Name="txtFechax"
                Margin="36,118,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Fecha"
                materialDesign:TextFieldAssist.HasClearButton="True"
                FirstDayOfWeek="Monday"
                Focusable="False"
                IsTodayHighlighted="True"
                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
            <TextBox
                x:Name="txtMontox"
                Margin="36,160,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Monto"
                materialDesign:TextFieldAssist.SuffixText="colones"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                x:Name="txtDescuentox"
                Margin="36,211,465,0"
                VerticalAlignment="Top"
                materialDesign:TextFieldAssist.SuffixText="%"
                materialDesign:HintAssist.Hint="Descuento"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

            <TextBox
                x:Name="txtImpuestox"
                Margin="36,258,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Impuesto"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                x:Name="txtSubtotalx"
                Height="37"
                Margin="36,307,405,106"
                materialDesign:HintAssist.Hint="Subtotal"
                materialDesign:TextFieldAssist.SuffixText="colones"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                x:Name="txtTotalx"
                Margin="36,364,405,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Total"
                materialDesign:TextFieldAssist.SuffixText="colones"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                x:Name="txtClientex"
                Margin="248,67,42,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Cliente"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                x:Name="txtDetallex"
                Margin="247,118,43,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Detalle"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <ComboBox
                x:Name="CbxPagox"
                Margin="247,160,43,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Metodo de pago"
                Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem Content="Efectivo" />
                <ComboBoxItem Content="Sinpe" />
                <ComboBoxItem Content="Transferencia" />
                <ComboBoxItem Content="Cheque" />
            </ComboBox>
            <TextBox
                x:Name="txtDescripcionx"
                Height="100"
                Margin="247,225,43,125"
                materialDesign:HintAssist.Hint="Descripcion de productos"
                materialDesign:TextFieldAssist.CharacterCounterVisibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=MaterialDesignOutlinedTextBoxTextCountComboBox}"
                MaxLength="200"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <ToggleButton
                Width="25"
                Height="25"
                Margin="170,228,405,196"
                materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=CloseCircle}"
                Content="{materialDesign:PackIcon Kind=Pencil}"
                Style="{StaticResource MaterialDesignActionToggleButton}"
                ToolTip="MaterialDesignActionLightToggleButton" />
            <TextBox
                x:Name="txtCodigox"
                Margin="36,67,399,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Código"
                Focusable="False"
                IsReadOnly="True"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
        </Grid>

        <!--  Categorias  -->
        <Grid
            Width="600"
            Height="450"
            Background="White">
            <Button
                Width="76"
                Height="60"
                Margin="10,2,0,388"
                HorizontalAlignment="Left"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                CommandParameter="{x:Static Dock.Right}">

                <materialDesign:PackIcon
                    Width="72"
                    Height="47"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="ArrowRight" />
            </Button>
            <!--
            <Button
                x:Name="btnAgregar"
                Grid.Row="0"
                Width="316"
                Height="30"
                Margin="237,388,0,32"
                HorizontalAlignment="Left"
                Content="Agregar" />

            <Button
                x:Name="btnEditar"
                Grid.Row="0"
                Width="90"
                Height="30"
                Margin="463,342,0,78"
                HorizontalAlignment="Left"
                Content="Editar" />

            <Button
                x:Name="BtnEliminar"
                Grid.Row="0"
                Width="90"
                Height="30"
                Margin="237,342,0,78"
                HorizontalAlignment="Left"
                Content="Eliminar" />
            <Button
                x:Name="btnLimpiar"
                Width="90"
                Height="30"
                Margin="350,342,160,78"
                Content="Limpiar" />

            -->

            <!--  No visibles  -->
            <TextBox
                Margin="73,67,209,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Buscar Cartegoria"
                RenderTransformOrigin="0.5,0.5"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />

            <Button
                Width="167"
                Height="30"
                Margin="411,17,0,403"
                HorizontalAlignment="Left"
                Content="Agregar Categoria" />

            <DataGrid
                x:Name="dgridCategorias"
                Grid.Row="0"
                Grid.Column="0"
                Margin="73,142,209,29"
                Padding="0,10" />



        </Grid>


        <!--  Categorias  -->

        <!--  Alertas  -->

        <!--  Eliminar  -->
        <StackPanel Margin="25" Background="Snow">
            <StackPanel x:Name="alrtEliminar">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <materialDesign:PackIcon
                        Width="40"
                        Height="40"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#FFCC512C"
                        Kind="Alert" />
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="16"
                        Text="Se eliminara el objeto seleccionado" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Margin="0,8,8,0"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        Content="Aceptar"
                        IsDefault="True"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.CommandParameter>
                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                True
                            </system:Boolean>
                        </Button.CommandParameter>
                    </Button>
                    <Button
                        Margin="0,8,8,0"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        Content="Cancelar"
                        IsCancel="True"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.CommandParameter>
                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                False
                            </system:Boolean>
                        </Button.CommandParameter>
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!--  Aviso: campos incompletos  -->
        <StackPanel x:Name="alrtAlerta" Background="Snow">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="40"
                    Height="40"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#FFCC512C"
                    Kind="AlertCircle" />
                <TextBlock
                    Margin="0,10,0,0"
                    FontSize="16"
                    Text="Debe llenar todos los campos" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Margin="0,8,8,0"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    Content="Aceptar"
                    IsCancel="True"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <Button.CommandParameter>
                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                            False
                        </system:Boolean>
                    </Button.CommandParameter>
                </Button>
            </StackPanel>
        </StackPanel>

        <Separator />

        <!--  Aviso: accion relizada con exito  -->
        <StackPanel x:Name="alrtConfirmacion" Background="Snow">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <materialDesign:PackIcon
                    Width="40"
                    Height="40"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#FF65B724"
                    Kind="CheckboxMarkedCircle" />
                <TextBlock
                    x:Name="nmAlerta"
                    Margin="0,10,0,0"
                    FontSize="16"
                    Text="" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Margin="0,8,8,0"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    Content="Aceptar"
                    IsCancel="True"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <Button.CommandParameter>
                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                            False
                        </system:Boolean>
                    </Button.CommandParameter>
                </Button>
            </StackPanel>
        </StackPanel>


    </StackPanel>
</Page>
