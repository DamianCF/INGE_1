<Window x:Class="CapaPresentacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentacion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgridCompras"  Margin="0,0,342,296" MouseUp="dgridCompras_MouseUp"/>
        <Label Content="Id" HorizontalAlignment="Left" Margin="54,229,0,0" VerticalAlignment="Top"/>
        <Label Content="Codigo" HorizontalAlignment="Left" Margin="54,272,0,0" VerticalAlignment="Top" Cursor=""/>
        <Label Content="Monto" HorizontalAlignment="Left" Margin="54,313,0,0" VerticalAlignment="Top" Cursor=""/>
        <Label Content="Fecha" HorizontalAlignment="Left" Margin="54,351,0,0" VerticalAlignment="Top" Cursor=""/>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="582,272,0,0" VerticalAlignment="Top" Click="btnAgregar_Click"/>
        <Button x:Name="btnActualizar" Content="Actualizar" HorizontalAlignment="Left" Margin="582,324,0,0" VerticalAlignment="Top" Click="btnActualizar_Click"/>
        <Button x:Name="BtnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="582,369,0,0" VerticalAlignment="Top" Click="BtnEliminar_Click"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="169,237,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtCodigo" HorizontalAlignment="Left" Margin="169,273,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtMonto" HorizontalAlignment="Left" Margin="169,316,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtFecha" HorizontalAlignment="Left" Margin="169,355,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLimpiar" Content="Limpiar" HorizontalAlignment="Left" Margin="681,344,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.055,-0.29" Click="btnLimpiar_Click" Style="{StaticResource MyStyle}"/>


    </Grid>
</Window>
