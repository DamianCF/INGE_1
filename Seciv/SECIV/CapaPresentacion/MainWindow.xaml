<Window
    x:Class="CapaPresentacion.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapaPresentacion"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <DataGrid
            x:Name="dgridCompras"
            Margin="0,0,342,296"
            MouseUp="dgridCompras_MouseUp" />
        <Label
            Margin="54,229,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Id" />
        <Label
            Margin="54,272,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Codigo"
            Cursor="" />
        <Label
            Margin="54,313,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Monto"
            Cursor="" />
        <Label
            Margin="54,351,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Fecha"
            Cursor="" />
        <Button
            x:Name="btnAgregar"
            Width="83"
            Height="26"
            Margin="582,215,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnAgregar_Click"
            Content="Agregar"
            RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-0.471" />
                    <TranslateTransform />
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button
            x:Name="btnActualizar"
            Margin="582,267,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnActualizar_Click"
            Content="Actualizar" />
        <Button
            x:Name="BtnEliminar"
            Margin="582,369,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnEliminar_Click"
            Content="Eliminar" />
        <TextBox
            x:Name="txtId"
            Width="120"
            Margin="169,237,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtCodigo"
            Width="120"
            Margin="169,273,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtMonto"
            Width="120"
            Margin="169,316,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtFecha"
            Width="120"
            Margin="169,355,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
        <Button
            x:Name="btnLimpiar"
            Margin="586,315,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnLimpiar_Click"
            Content="Limpiar"
            RenderTransformOrigin="0.055,-0.29" />

    </Grid>
</Window>
