<Page
    x:Class="CapaPresentacion.Modulo_Contabilidad.mainContabilidadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapaPresentacion.Modulo_Contabilidad"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="mainContabilidadView"
    mc:Ignorable="d">

    <materialDesign:DrawerHost
        x:Name="DrawerHost"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        OverlayBackground="Transparent"
        RightDrawerCornerRadius="20 0 0 0">
        <materialDesign:DrawerHost.Style>
            <Style BasedOn="{StaticResource {x:Type materialDesign:DrawerHost}}" TargetType="materialDesign:DrawerHost">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsChecked, ElementName=BackgroundToggle}" Value="True">
                        <Setter Property="OverlayBackground" Value="{DynamicResource PrimaryHueMidBrush}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </materialDesign:DrawerHost.Style>

        <materialDesign:DrawerHost.RightDrawerContent>
            <StackPanel
                Width="600"
                Margin="0,30,0,20"
                Background="#FFFDFDFD">
                <Grid
                    Width="600"
                    Margin="0,30,0,20"
                    Background="White">
                    <Button
                        Margin="232,323,0,45"
                        HorizontalAlignment="Left"
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Right}"
                        Content="CLOSE THIS"
                        Style="{StaticResource MaterialDesignFlatButton}" />

                    <Button
                        x:Name="btnAgregar"
                        Grid.Row="0"
                        Width="90"
                        Height="30"
                        Margin="373,280,0,90"
                        HorizontalAlignment="Left"
                        Content="Agregar" />

                    <Button
                        x:Name="btnActualizar"
                        Grid.Row="0"
                        Width="90"
                        Height="30"
                        Margin="492,280,0,90"
                        HorizontalAlignment="Left"
                        Content="Actualizar" />

                    <Button
                        x:Name="BtnEliminar"
                        Grid.Row="0"
                        Width="90"
                        Height="30"
                        Margin="492,347,0,23"
                        HorizontalAlignment="Left"
                        Content="Eliminar" />
                    <Button
                        x:Name="btnLimpiar"
                        Width="90"
                        Height="30"
                        Margin="373,345,137,25"
                        Content="Limpiar" />

                    <TextBox
                        Height="37"
                        Margin="16,228,421,135"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="211,24,66,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="16,19,415,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        RenderTransformOrigin="0.5,0.5"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                        <TextBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform AngleY="0.203" />
                                <RotateTransform />
                                <TranslateTransform Y="0.33" />
                            </TransformGroup>
                        </TextBox.RenderTransform>
                    </TextBox>

                    <TextBox
                        Margin="16,56,421,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="224,91,66,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="224,200,147,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="224,142,163,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="16,256,421,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="16,347,421,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="16,298,421,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="16,0,421,0"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="16,98,421,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <TextBox
                        Margin="16,140,421,0"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Floating Hint"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                </Grid>

            </StackPanel>
        </materialDesign:DrawerHost.RightDrawerContent>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Grid
                Margin="10,10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="FirstColumn" />
                    <ColumnDefinition SharedSizeGroup="SecondColumn" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition SharedSizeGroup="FirstRow" />
                </Grid.RowDefinitions>

                <DataGrid
                    x:Name="dgridCompras"
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="950"
                    Height="700"
                    Padding="0,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />

                <Button
                    x:Name="btnActualizarr"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="90"
                    Height="30"
                    Margin="34,320,0,350"
                    HorizontalAlignment="Left"
                    Content="Actualizar" />

                <Button
                    x:Name="BtnEliminarr"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="90"
                    Height="30"
                    Margin="34,400,0,270"
                    HorizontalAlignment="Left"
                    Content="Eliminar" />

                <Button
                    x:Name="btnLimpiarr"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="90"
                    Height="30"
                    Margin="34,232,0,438"
                    HorizontalAlignment="Left"
                    Content="Limpiar" />

                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="40"
                    Margin="20,0,0,165"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    materialDesign:ButtonAssist.CornerRadius="20"
                    Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                    CommandParameter="{x:Static Dock.Right}"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="33"
                            Height="34"
                            Kind="Plus" />
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="Nuevo" />
                    </StackPanel>
                </Button>
            </Grid>

        </StackPanel>

    </materialDesign:DrawerHost>

</Page>
