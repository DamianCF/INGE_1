<Page
    x:Class="CapaPresentacion.Modulo_Compras.mainComprasView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapaPresentacion.Modulo_Compras"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="mainComprasView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
        <Grid Margin="41,26,511,251">
            <Grid.RowDefinitions>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="48*"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dgridCompras" MouseUp="dgridCompras_MouseUp" IsReadOnly="True" AutoGeneratingColumn="dgridCompras_AutoGeneratingColumn" Grid.RowSpan="2" Background="#FFDCF2F4" />
        </Grid>

        <Grid Margin="366,10,112,10">
            <Label
                Margin="30,2,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Id" />
            <Label
                Margin="24,31,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Codigo"
                Cursor="" />
            <Label
                Margin="25,60,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Monto"
                Cursor="" />
            <Label
                Margin="25,80,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Fecha"
                Cursor="" />
            <TextBox
                x:Name="txtId"
                Width="120"
                Margin="120,37,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="txtCodigo"
                Width="120"
                Margin="120,13,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="txtMonto"
                Width="120"
                Margin="120,67,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" Height="18" />
            <TextBox
                x:Name="txtFecha"
                Width="120"
                Margin="120,85,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <Label
                Margin="25,109,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Estado"
                Cursor="" RenderTransformOrigin="2.736,0.207" />
            <TextBox
                x:Name="txtEstado"
                Width="120"
                Margin="120,110,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <Label
                Margin="24,146,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Descuento"
                Cursor="" RenderTransformOrigin="2.736,0.207" />
            <TextBox
                x:Name="txtDesc"
                Width="120"
                Margin="120,135,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <Label Content="Impuesto" HorizontalAlignment="Left" Margin="25,182,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtImpuesto" HorizontalAlignment="Left" Margin="120,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Total" HorizontalAlignment="Left" Margin="30,213,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.046,1.23"/>
            <TextBox x:Name="txtTotal" HorizontalAlignment="Left" Margin="120,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Subtotal" HorizontalAlignment="Left" Margin="25,242,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtSubtotal" HorizontalAlignment="Left" Margin="120,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Proveedor" HorizontalAlignment="Left" Margin="30,271,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtProve" HorizontalAlignment="Left" Margin="120,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Producto" HorizontalAlignment="Left" Margin="30,295,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtProducto" HorizontalAlignment="Left" Margin="120,281,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Detalle" HorizontalAlignment="Left" Margin="30,319,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtDetalle" HorizontalAlignment="Left" Margin="120,311,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Metodo Pago" HorizontalAlignment="Left" Margin="30,343,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtMetodoPago" HorizontalAlignment="Left" Margin="120,343,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        </Grid>

        <Grid Margin="553,10,0,0">
            <Button
                x:Name="btnAgregar"
                Width="83"
                Height="26"
                Margin="85,34,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnAgregar_Click"
                Content="Agregar"
                RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="-0.471" />
                        <TranslateTransform />
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button
                x:Name="btnActualizar"
                Margin="85,64,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnActualizar_Click"
                Content="Actualizar" />
            <Button
                x:Name="BtnEliminar"
                Margin="91,138,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BtnEliminar_Click"
                Content="Eliminar" />

            <Button
                x:Name="btnLimpiar"
                Margin="93,101,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnLimpiar_Click"
                Content="Limpiar"
                RenderTransformOrigin="0.055,-0.29" />
        </Grid>
        <Grid Margin="41,176,422,27">
            <Label
                Margin="29,16,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Id" RenderTransformOrigin="0.698,-0.49" Height="24" />
            <Label
                Margin="25,40,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Codigo"
                Cursor="" />
            <Label x:Name="proveedor"
                Margin="5,72,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Nombre Proveedor"
                Cursor="" />
            <Label
                Margin="29,101,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Fecha"
                Cursor="" />
            <TextBox
                x:Name="txtCodigoFact"
                Width="120"
                Margin="120,37,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="txtIdFact"
                Width="120"
                Margin="120,13,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="txtNomProveedorFact"
                Width="120"
                Margin="128,78,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" Height="18" />
            <TextBox
                x:Name="txtFechaFact"
                Width="120"
                Margin="120,100,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <Label
                Margin="28,130,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="detalle"
                Cursor="" RenderTransformOrigin="2.736,0.207" />
            <TextBox
                x:Name="txtDetalleFact"
                Width="120"
                Margin="120,129,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <Label
                Margin="25,159,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Metodo Pago"
                Cursor="" RenderTransformOrigin="2.736,0.207" />
            <TextBox
                x:Name="txtMetodoPagoFact"
                Width="120"
                Margin="120,163,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
        </Grid>



    </Grid>
</Page>
