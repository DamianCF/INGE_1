<Page
    x:Class="CapaPresentacion.Modulo_Compras.mainComprasView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapaPresentacion.Modulo_Compras"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="mainComprasView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
        <Grid Margin="77,63,377,240">
            <DataGrid x:Name="dgridCompras" MouseUp="dgridCompras_MouseUp" IsReadOnly="True" AutoGeneratingColumn="dgridCompras_AutoGeneratingColumn" />
        </Grid>

        <Grid Margin="49,246,221,59" Height="140">
            <Label
                Margin="25,25,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Id" />
            <Label
                Margin="25,40,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Codigo"
                Cursor="" />
            <Label
                Margin="25,60,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Monto"
                Cursor="" />
            <Label
                Margin="25,80,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Fecha"
                Cursor="" />
            <TextBox
                x:Name="txtId"
                Width="120"
                Margin="120,25,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="txtCodigo"
                Width="120"
                Margin="120,40,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="txtMonto"
                Width="120"
                Margin="120,60,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="txtFecha"
                Width="120"
                Margin="120,80,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
            <Label
                Margin="25,109,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Estado"
                Cursor="" RenderTransformOrigin="2.736,0.207" />
            <TextBox
                x:Name="txtEstado"
                Width="120"
                Margin="120,110,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
        </Grid>

        <Grid Margin="549,10,0,0">
            <Button
                x:Name="btnAgregar"
                Width="83"
                Height="26"
                Margin="85,34,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnAgregar_Click"
                Content="Agregar"
                RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="-0.471" />
                        <TranslateTransform />
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button
                x:Name="btnActualizar"
                Margin="85,86,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnActualizar_Click"
                Content="Actualizar" />
            <Button
                x:Name="BtnEliminar"
                Margin="85,188,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BtnEliminar_Click"
                Content="Eliminar" />

            <Button
                x:Name="btnLimpiar"
                Margin="89,134,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnLimpiar_Click"
                Content="Limpiar"
                RenderTransformOrigin="0.055,-0.29" />
        </Grid>



    </Grid>
</Page>
